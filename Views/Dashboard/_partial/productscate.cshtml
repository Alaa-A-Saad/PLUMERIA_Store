
@{
}

<div class="row mt-5">
	<div class="col">
		<div class="card">
			<div class="card-body">
				<table class="text-center">
					<thead>
						<tr>
							<td>رقم الفئة</td>
							<td>اسم  فئة المنتج </td>
							<td class="text-center" colspan="2">اجراء</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Id</td>
								<td>@item.Name</td>
								<td>
									<a onclick="showmassage(@item.Id)">
										<i class="fa fa-fw fa-trash text-danger" aria-hidden="true"></i>
									</a>
								</td>
								<td>

									<form asp-action="Editprodcat" asp-route-id="@item.Id">
										<button type="submit" class="btn btn-link p-0">
											<i class="fas fa-pencil-alt" aria-hidden="true"></i>
										</button>
									</form>
								<td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
