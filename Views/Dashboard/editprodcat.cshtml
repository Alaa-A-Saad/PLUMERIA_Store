@model ProductsCate
@{
    Layout = "~/Views/Shared/_LayoutsAdmin.cshtml";
}


<div class="container">
	<div class="row mt-5">
		<div class="col">
			<div class="card mt-5">
				<div class="card-body">
					<form asp-action="Updateprodcat" method="post">
						<div class="row">
							<input type="hidden" asp-for="@Model.Id" />

							<div class="col">
								<label class="form-label">اسم فئة المنتج </label>
								<input type="text" asp-for="@Model.Name" class="form-control" />
							</div>
						</div>
						<div class="row mt-3">
							<div class="col text-center">
								<button type="submit" class="btn-hover color-1"> تحديث</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>