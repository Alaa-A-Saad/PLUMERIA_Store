@model IEnumerable<Products>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "الهدايا";

}


<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var items in Model)
        {
            <div class="col mb-5">
                <div class="card h-100">
                    <img class="card-img-top" src="/img/prod/@items.Images" alt="@items.Name" />
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h5 class="fw-bolder">@items.Name</h5>
                            <p>@items.Description</p>
                            <p>@items.Price ريال</p>
                        </div>
                    </div>
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a class="btn btn-outline-dark mt-auto" href="#" onclick="addToCart()">اضف للسلة</a>
                        </div>
                    </div>
                </div>
            </div>
        };

    </div>
</div>